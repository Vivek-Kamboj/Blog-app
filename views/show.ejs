<%- include("partials/header") %>

<div class="ui main text container segment">
	<div class="ui huge header"><%= blog.title%></div>
	<div class="ui top attached">
		<div class="item">
			<img class="ui centered rounded image" src="<%= blog.image %>" alt="pic">		
			<div class="content">
				<span><%= blog.created.toDateString() %></span>		
			</div>
			<div class="description">
				<p><%- blog.body %></p>	
			</div> 
			<a class="ui orange basic button" href="/blogs/<%= blog._id %>/edit">EDIT</a>
			<form method="POST" action="/blogs/<%= blog._id %>?_method=DELETE" id="deleteForm">
				<button class="ui red basic button">DELETE ME!</button>
			</form>

		</div>

	</div>
	
	
</div>




<%- include("partials/footer") %>