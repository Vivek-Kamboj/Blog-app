<%- include("partials/header") -%>

<div class="ui main text container">
	<div class="ui huge header">
		<h1>Hi Forks, Welcome to Blogs App!!</h1>
	</div>
	<div class="ui top attached segment">
		<div class="ui divided items">
			
			<% blogs.forEach(function(blog){ %>

			<div class="item">
				<div class="image">
					<img src="<%= blog.image %>" alt="pic">
				</div>

				<div class="content">
					<a class="header" href="/blogs/<%= blog._id %>"><%= blog.title %></a>
					<div class="meta">
						<span><%= blog.created.toDateString() %></span>
					</div>
					<div class="description">
						<p><%- blog.body.substring(0,100) %>...</p>
					</div>
					<div class="extras">
						<a class="ui basic violet button floated" href="/blogs/<%= blog._id %>">Read More <i class="chevron circle right icon" id="icon_right"></i></a>
					</div>
				</div>

			</div>

			<div>
			</div>
			<% }) %>

		</div>
		
	</div>
</div>







<%- include("partials/footer") -%>